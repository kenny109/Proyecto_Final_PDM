<resources xmlns:tools="http://schemas.android.com/tools">
    <!--  Base application theme.  -->
    <!--  Tema principal basado en Theme.AppCompat  -->
    <style name="Theme.JuegoMemoriaSonidos" parent="Theme.AppCompat.DayNight">
        <!--  Personaliza el tema según tus necesidades  -->
        <!--  Colores principales  -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--  Colores de texto y botones  -->
        <item name="android:textColorPrimary">@color/colorTextPrimary</item>
        <item name="android:buttonStyle">@style/Widget.AppCompat.Button.Colored</item>
        <!--  Colores de la barra de estado  -->
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <!--  Colores de fondo  -->
        <item name="android:windowBackground">@color/windowBackground</item>
        <!--  Personalización de texto (tamaños y tipos de letra)  -->
        <item name="android:textSize">16sp</item>
    </style>
    <!--  Estilo personalizado para botones  -->
    <style name="CustomButtonStyle">
        <item name="android:background">@color/buttonBackground</item>
        <item name="android:textColor">@color/buttonTextColor</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="Base.Theme.Minijuegos" parent="Theme.Material3.DayNight.NoActionBar">
        <!--  Customize your light theme here.  -->
        <!--  <item name="colorPrimary">@color/my_light_primary</item>  -->
    </style>
    <style name="Theme.Minijuegos" parent="Base.Theme.Minijuegos"/>
</resources>